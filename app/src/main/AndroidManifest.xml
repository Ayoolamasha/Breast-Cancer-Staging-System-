<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ayoolamasha.breastcancerstaging">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_custom_launcher"
        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity"/>
        <activity android:name=".Activities.AddNewRecordActivity"/>
        <activity android:name=".Activities.PatientRecordActivity"/>
        <activity android:name=".Activities.PatientRecordDetailsActivity"/>
    </application>

</manifest>